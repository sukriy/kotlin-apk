<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:id="@+id/swipe"
        tools:context=".activity.PinjamanWajibActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="Logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txt_logout"
                    app:layout_constraintTop_toBottomOf="@+id/btn_process"
                    app:layout_constraintEnd_toEndOf="@+id/btn_process"
                    app:layout_constraintStart_toStartOf="@+id/btn_process" android:layout_marginTop="8dp"
                    android:textColor="#2292B4"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView45" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    android:text="Simpanan Wajib Member" android:textSize="24sp"/>
            <TextView
                    android:text="Nominal : 200000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView46" android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView45" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
            <TextView
                    android:text="Tanggal Pembayaran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView47"
                    app:layout_constraintTop_toBottomOf="@+id/textView46" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textView46"
            />
            <TextView
                    android:text="Bukti Transfer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView48"
                    app:layout_constraintTop_toBottomOf="@+id/txt_tglPmbyrn"
                    app:layout_constraintStart_toStartOf="@+id/textView47"
                    android:layout_marginTop="8dp"/>

            <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/image1"
                    app:layout_constraintTop_toBottomOf="@+id/textView48" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="@+id/textView48" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/txt_tglPmbyrn"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"/>
            <Button
                    android:text="Submit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_process" app:layout_constraintStart_toStartOf="@+id/txt_tglPmbyrn"
                    app:layout_constraintEnd_toEndOf="@+id/txt_tglPmbyrn"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/gambar"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txt_tglPmbyrn"
                    app:layout_constraintStart_toStartOf="@+id/textView47"
                    android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="32dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView47"/>
            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pBar"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintVertical_bias="0.644" android:visibility="gone"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>