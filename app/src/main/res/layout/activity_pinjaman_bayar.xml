<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.PinjamanBayarActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView27" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:textSize="24sp"/>
        <TextView
                android:text="Tanggal Pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                app:layout_constraintTop_toBottomOf="@+id/txt_nominal"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@+id/txt_nominal"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_tglPmbyrn"
                app:layout_constraintStart_toStartOf="@+id/textView28"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView28"
                android:hint="Tanggal Pembayaran"
                app:layout_constraintEnd_toEndOf="@+id/txt_nominal"/>
        <TextView
                android:text="Nominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView27" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_nominal"
                android:hint="Nominal"
                app:layout_constraintTop_toBottomOf="@+id/textView29"
                app:layout_constraintStart_toStartOf="@+id/textView29"
                android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="32dp"/>
        <TextView
                android:text="Bukti Transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView30"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_tglPmbyrn"
                app:layout_constraintStart_toStartOf="@+id/txt_tglPmbyrn"
        />
        <ImageView
                android:id="@+id/gambar"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                app:layout_constraintTop_toBottomOf="@+id/textView30" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/textView30" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/txt_nominal"
                android:layout_marginRight="8dp" android:layout_marginTop="8dp"/>
        <Button
                android:text="Submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_bayar" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/gambar" app:layout_constraintStart_toStartOf="@+id/textView30"
                app:layout_constraintEnd_toEndOf="@+id/txt_nominal"
        />
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pBar" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintVertical_bias="0.509" android:visibility="gone"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>