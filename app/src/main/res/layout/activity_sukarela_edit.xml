<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.SukarelaEditActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pBar" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:visibility="gone"/>
        <TextView
                android:text="Jenis Pembayaran: Transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView31"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_nominal" app:layout_constraintStart_toStartOf="@+id/txt_nominal"
        />
        <TextView
                android:text="Tabungan Sukarela Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView19"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"/>
        <TextView
                android:text="Nominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView20"
                app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp" android:layout_marginTop="24dp"/>
        <TextView
                android:text="Tanggal Pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView24"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView31"
                app:layout_constraintStart_toStartOf="@+id/textView31"
        />
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_tglPmbyrn"
                android:hint="Tanggal Pembayaran" android:editable="false"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView24"
                app:layout_constraintStart_toStartOf="@+id/textView24"
                app:layout_constraintEnd_toEndOf="@+id/txt_nominal"/>

        <ImageView
                android:id="@+id/gambar"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/textView25" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/txt_tglPmbyrn"
                android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView25"/>
        <TextView
                android:text="Bukti Pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView25"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_tglPmbyrn"
                app:layout_constraintStart_toStartOf="@+id/txt_tglPmbyrn"
        />
        <TextView
                android:text="Keterangan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                app:layout_constraintTop_toBottomOf="@+id/gambar" app:layout_constraintStart_toStartOf="@+id/textView25"
                android:layout_marginTop="8dp"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/txt_keterangan"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView26"
                app:layout_constraintStart_toStartOf="@+id/textView26"
                app:layout_constraintEnd_toEndOf="@+id/txt_tglPmbyrn"/>
        <Button
                android:text="Submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_keterangan"
                app:layout_constraintEnd_toEndOf="@+id/txt_keterangan"
                app:layout_constraintStart_toStartOf="@+id/txt_keterangan"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txt_nominal" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView20"
                app:layout_constraintStart_toStartOf="@+id/textView20" android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp" android:hint="Nominal"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>